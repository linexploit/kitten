<Section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

      <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
        <%= form_with(model: @user, url: user_session_path, local: true) do |f| %>
          <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

          <div data-mdb-input-init class="form-outline mb-4">
            <%= f.email_field :email, id: "user_email", class: "form-control form-control-lg", autofocus: true, placeholder: "Email address" %>
            <label class="form-label" for="user_email"></label>
          </div>

          <div data-mdb-input-init class="form-outline mb-4">
            <%= f.password_field :password, id: "user_password", class: "form-control form-control-lg", placeholder: "Password" %>
            <label class="form-label" for="user_password"></label>
          </div>

          <div class="pt-1 mb-4">
            <%= f.submit "Login", class: "btn btn-info btn-lg btn-block", data: { mdb_button_init: true, mdb_ripple_init: true } %>
          </div>

          <p>Don't have an account? <%= render "devise/shared/links" %></a></p>
        <% end %>
      </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://ih1.redbubble.net/image.5292626530.4880/flat,750x1000,075,f.jpg"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>