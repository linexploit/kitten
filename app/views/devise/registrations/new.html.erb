<Section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          <%= form_with(model: @user, url: user_registration_path, local: true) do |f| %>
            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign up</h3>

            <div data-mdb-input-init class="form-outline mb-4">
              <%= f.email_field :email, id: "form2Example18", class: "form-control form-control-lg", autofocus: true, placeholder: "Email address" %>
              <label class="form-label" for="form2Example18"></label>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <%= f.password_field :password, id: "form2Example28", class: "form-control form-control-lg", placeholder: "Password" %>
              <label class="form-label" for="form2Example28"></label>
              <% if @minimum_password_length %>
                <em class="text-muted" >(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
              <%= f.password_field :password_confirmation, id: "form2Example29", class: "form-control form-control-lg", placeholder: "Password Confirmation" %>
              <label class="form-label" for="form2Example29"></label>
            </div>

            <div class="pt-1 mb-4">
              <%= f.submit "Create account", class: "btn btn-success btn-lg btn-block", data: { mdb_button_init: true, mdb_ripple_init: true } %>
            </div>

            <p>Already have an account? <%= render "devise/shared/links" %></p>
          <% end %>
        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTRVSEkmO-Vh1M3UfegCqZjrpnHlsWggBcBeE0ALDlhYQ&s"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>


